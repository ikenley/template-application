{
  "AllowedHosts": "*",
  "AWS": {
    "Region": "us-east-1"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Enrichers.ClientInfo"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithClientIp",
      "WithClientAgent"
    ],
    "Properties": {
      "Application": "TemplateApi"
    }
  }
}
